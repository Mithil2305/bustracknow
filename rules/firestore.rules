// rules/firestore.rules
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // âœ… USERS: Public read (trust system), self-write only + anti-ban bypass
    match /users/{userId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
      
      // ğŸ”’ CRITICAL: Prevent banned users from modifying their ban status
      allow update: if request.auth.uid == userId 
        && (!request.resource.data.keys().hasAny(['isBanned']) 
            || request.resource.data.isBanned == resource.data.isBanned)
        && !resource.data.isBanned; // Banned users cannot update ANY field
    }
    
    // âœ… ROUTES: Public read, admin write only
    match /routes/{routeId} {
      allow read: if true;
      allow write: if request.auth != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // âœ… ALERTS: Public read, authenticated create with validation
    match /alerts/{alertId} {
      allow read: if true;
      
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(['routeId', 'type', 'contributorId', 'location', 'timestamp'])
        && ['full', 'late', 'not-running'].hasAny([request.resource.data.type])
        && request.resource.data.location.lat is number
        && request.resource.data.location.lng is number
        && request.resource.data.contributorId == request.auth.uid
        && request.resource.data.timestamp > (request.time - duration.value(5, 'minutes')) // Prevent timestamp spoofing
        && !get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isBanned;
      
      // Only allow upvotes (prevent downvote attacks)
      allow update: if request.auth != null
        && request.resource.data.upvotes > resource.data.upvotes;
    }
    
    // âœ… POINTS TRANSACTIONS: Immutable ledger (critical for audit)
    match /points_transactions/{transactionId} {
      allow read: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      allow update, delete: if false; // ğŸ”’ Immutable - no modifications allowed
    }
    
    // âœ… REDEMPTIONS: User owns requests, admin updates status
    match /redemptions/{requestId} {
      allow read: if request.auth != null 
        && (request.auth.uid == resource.data.userId 
            || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      allow create: if request.auth != null
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.pointsUsed >= 10000 // Minimum 10,000 points (â‚¹100)
        && request.resource.data.amount >= 100
        && resource == null; // Prevent duplicate submissions
      
      // Only admin can update status
      allow update: if request.auth != null 
        && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        && request.resource.data.status in ['pending', 'processing', 'completed', 'failed'];
    }
  }
}